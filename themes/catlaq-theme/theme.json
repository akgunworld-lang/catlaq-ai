{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "color": {
            "palette": [
                {
                    "slug": "primary",
                    "color": "#667eea",
                    "name": "Primary"
                },
                {
                    "slug": "secondary",
                    "color": "#764ba2",
                    "name": "Secondary"
                },
                {
                    "slug": "accent",
                    "color": "#f093fb",
                    "name": "Accent"
                },
                {
                    "slug": "success",
                    "color": "#48bb78",
                    "name": "Success"
                },
                {
                    "slug": "warning",
                    "color": "#ed8936",
                    "name": "Warning"
                },
                {
                    "slug": "error",
                    "color": "#f56565",
                    "name": "Error"
                },
                {
                    "slug": "white",
                    "color": "#ffffff",
                    "name": "White"
                },
                {
                    "slug": "gray-50",
                    "color": "#f7fafc",
                    "name": "Gray 50"
                },
                {
                    "slug": "gray-100",
                    "color": "#edf2f7",
                    "name": "Gray 100"
                },
                {
                    "slug": "gray-200",
                    "color": "#e2e8f0",
                    "name": "Gray 200"
                },
                {
                    "slug": "gray-300",
                    "color": "#cbd5e0",
                    "name": "Gray 300"
                },
                {
                    "slug": "gray-400",
                    "color": "#a0aec0",
                    "name": "Gray 400"
                },
                {
                    "slug": "gray-500",
                    "color": "#718096",
                    "name": "Gray 500"
                },
                {
                    "slug": "gray-600",
                    "color": "#4a5568",
                    "name": "Gray 600"
                },
                {
                    "slug": "gray-700",
                    "color": "#2d3748",
                    "name": "Gray 700"
                },
                {
                    "slug": "gray-800",
                    "color": "#1a202c",
                    "name": "Gray 800"
                },
                {
                    "slug": "gray-900",
                    "color": "#171923",
                    "name": "Gray 900"
                }
            ],
            "gradients": [
                {
                    "slug": "primary-gradient",
                    "gradient": "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
                    "name": "Primary Gradient"
                },
                {
                    "slug": "accent-gradient",
                    "gradient": "linear-gradient(135deg, #f093fb 0%, #f5576c 100%)",
                    "name": "Accent Gradient"
                }
            ]
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
                    "slug": "inter",
                    "name": "Inter"
                }
            ],
            "fontSizes": [
                {
                    "slug": "small",
                    "size": "0.875rem",
                    "name": "Small"
                },
                {
                    "slug": "medium",
                    "size": "1rem",
                    "name": "Medium"
                },
                {
                    "slug": "large",
                    "size": "1.125rem",
                    "name": "Large"
                },
                {
                    "slug": "x-large",
                    "size": "1.25rem",
                    "name": "Extra Large"
                },
                {
                    "slug": "xx-large",
                    "size": "1.5rem",
                    "name": "Extra Extra Large"
                },
                {
                    "slug": "xxx-large",
                    "size": "2.25rem",
                    "name": "Huge"
                }
            ]
        },
        "spacing": {
            "spacingSizes": [
                {
                    "slug": "20",
                    "size": "0.5rem",
                    "name": "1"
                },
                {
                    "slug": "30",
                    "size": "0.75rem",
                    "name": "2"
                },
                {
                    "slug": "40",
                    "size": "1rem",
                    "name": "3"
                },
                {
                    "slug": "50",
                    "size": "1.5rem",
                    "name": "4"
                },
                {
                    "slug": "60",
                    "size": "2rem",
                    "name": "5"
                },
                {
                    "slug": "70",
                    "size": "3rem",
                    "name": "6"
                },
                {
                    "slug": "80",
                    "size": "4rem",
                    "name": "7"
                }
            ]
        },
        "layout": {
            "contentSize": "1200px",
            "wideSize": "1400px"
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--gray-50)",
            "text": "var(--wp--preset--color--gray-800)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--inter)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.6"
        },
        "spacing": {
            "blockGap": "2rem"
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--secondary)"
                    }
                }
            },
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--xxx-large)",
                    "fontWeight": "800",
                    "lineHeight": "1.2"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--xx-large)",
                    "fontWeight": "700",
                    "lineHeight": "1.3"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--x-large)",
                    "fontWeight": "600",
                    "lineHeight": "1.4"
                }
            }
        },
        "blocks": {
            "core/button": {
                "color": {
                    "background": "var(--wp--preset--gradient--primary-gradient)",
                    "text": "var(--wp--preset--color--white)"
                },
                "border": {
                    "radius": "0.5rem"
                },
                "spacing": {
                    "padding": {
                        "top": "0.75rem",
                        "right": "1.5rem",
                        "bottom": "0.75rem",
                        "left": "1.5rem"
                    }
                },
                "typography": {
                    "fontWeight": "600"
                }
            },
            "core/group": {
                "spacing": {
                    "margin": {
                        "bottom": "2rem"
                    }
                }
            },
            "core/cover": {
                "spacing": {
                    "padding": {
                        "top": "5rem",
                        "right": "1.5rem",
                        "bottom": "5rem",
                        "left": "1.5rem"
                    }
                }
            }
        }
    },
    "templateParts": [
        {
            "name": "header",
            "title": "Header",
            "area": "header"
        },
        {
            "name": "footer",
            "title": "Footer",
            "area": "footer"
        }
    ],
    "customTemplates": [
        {
            "name": "digital-expo",
            "title": "Digital Expo",
            "postTypes": [
                "page"
            ]
        },
        {
            "name": "seller-dashboard",
            "title": "Seller Dashboard",
            "postTypes": [
                "page"
            ]
        },
        {
            "name": "buyer-dashboard",
            "title": "Buyer Dashboard",
            "postTypes": [
                "page"
            ]
        }
    ]
}
